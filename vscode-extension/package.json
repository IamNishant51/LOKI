{
    "name": "loki-ai-assistant",
    "displayName": "LOKI AI - Local AI Assistant",
    "description": "Intelligent AI assistant powered by local LLMs. Explain code, chat with AI, and boost your productivity - all without leaving VS Code!",
    "version": "1.0.0",
    "publisher": "IamNishant51",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/IamNishant51/LOKI.git"
    },
    "bugs": {
        "url": "https://github.com/IamNishant51/LOKI/issues"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Machine Learning",
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "ai",
        "assistant",
        "ollama",
        "local-llm",
        "code-explanation",
        "productivity"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "loki.explainSelection",
                "title": "LOKI: Explain Code Selection"
            },
            {
                "command": "loki.chat",
                "title": "LOKI: Open Chat"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "loki.explainSelection",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "typescript": "^5.0.0",
        "@vscode/vsce": "^3.0.0"
    }
}